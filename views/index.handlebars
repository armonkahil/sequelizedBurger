{{! Header and title}}
<div class="container-fluid">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-8 justify-content-center">
        <div class="text-center">
          <img src='/assets/images/burger.png' alt='burger' type='img/png' class='logo'>
          <h1>Eat-Da-Burger!</h1>
        </div>
      </div>
    </div>
  </div>
{{! Burger list sections}}
  <div class="container-fluid">
    <div class="row justify-content-between">
      <div class="col-4">
        <h2 class="text-center">Burgers Saved</h2>
        <ol class="list-group">
          {{#each burgers}}
          {{#unless devoured}}
          <li class="justify-content-end">
            {{burger_name}}
            <button class="devour btn btn-primary btn-sm float-right" id="{{burger_name}}">Devour!!!
            </button>
          </li>
          {{/unless}}
          {{/each}}
        </ol>
      </div>
      <div class="col-4">
        <h2 class="text-center">Burgers Devoured</h2>
        <ol type="1" class="list-group">
          {{#each burgers}}
          {{#if devoured}}
          <li class="justify-content-end">
            {{burger_name}}
          </li>
          {{/if}}
          {{/each}}
        </ol>
      </div>
    </div>
  </div>
  {{! Form section}}
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-8 justify-content-center">
        <div class="text-center">
          <form>
            <input type="text" name="name" id='burgerName'><br>
            <input class="btn btn-primary btn-small" type="button" value="Submit" id="add">
            <p>Enter a burger you want to eat Click the "Submit" button.</p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>